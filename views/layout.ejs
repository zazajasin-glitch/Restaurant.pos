<!doctype html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= title || "POS" %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/app.css"/>
</head>
<body class="bg-app text-white">
  <nav class="navbar navbar-dark border-bottom border-opacity-25">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/pos">🍽️ POS</a>
      <div class="ms-auto d-flex gap-2 align-items-center">
        <% if (user) { %><span class="badge text-bg-secondary"><%= user.role %></span><% } %>
        <% if (user && user.role === "admin") { %>
          <a class="btn btn-outline-light btn-sm" href="/admin/products">إدارة الأصناف</a>
          <a class="btn btn-outline-light btn-sm" href="/admin/reports">التقارير</a>
        <% } %>
        <% if (user) { %>
          <form method="post" action="/logout">
            <button class="btn btn-outline-danger btn-sm">خروج</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>

  <main class="container-fluid py-3"><%- body %></main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
