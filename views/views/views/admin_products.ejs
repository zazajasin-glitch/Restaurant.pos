<%- include("layout", {
  title: "إدارة الأصناف",
  user,
  body: `
  <div class="row g-3">
    <div class="col-12 col-lg-4">
      <div class="card glass p-3">
        <h5 class="fw-bold mb-3">إضافة قسم</h5>
        <form method="post" action="/admin/categories" class="d-flex gap-2">
          <input class="form-control" name="name" placeholder="اسم القسم" required>
          <button class="btn btn-outline-light">إضافة</button>
        </form>
      </div>

      <div class="card glass p-3 mt-3">
        <h5 class="fw-bold mb-3">إضافة طبق</h5>
        <form method="post" action="/admin/products" class="d-grid gap-2">
          <input class="form-control" name="name" placeholder="اسم الطبق" required>
          <input class="form-control" name="price_iqd" type="number" min="0" step="250" placeholder="السعر (د.ع)" required>
          <select class="form-select" name="category_id">
            <option value="">بدون قسم</option>
            ${cats.map(c => `<option value="${c.id}">${c.name}</option>`).join("")}
          </select>
          <button class="btn btn-primary">حفظ</button>
        </form>
      </div>
    </div>

    <div class="col-12 col-lg-8">
      <div class="card glass p-3">
        <h5 class="fw-bold mb-3">الأطباق</h5>
        <div class="table-responsive">
          <table class="table table-dark table-hover align-middle">
            <thead>
              <tr>
                <th>الاسم</th>
                <th>القسم</th>
                <th>السعر</th>
                <th>الحالة</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              ${products.map(p => `
                <tr>
                  <td>${p.name}</td>
                  <td class="text-secondary">${p.categoryName}</td>
                  <td>${fmtIQD(p.priceIqd)}</td>
                  <td>${p.isActive ? `<span class="badge text-bg-success">فعال</span>` : `<span class="badge text-bg-secondary">مخفي</span>`}</td>
                  <td class="text-end">
                    <form method="post" action="/admin/products/${p.id}/toggle">
                      <button class="btn btn-sm btn-outline-light">${p.isActive ? "إخفاء" : "تفعيل"}</button>
                    </form>
                  </td>
                </tr>
              `).join("")}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
`}) %>
