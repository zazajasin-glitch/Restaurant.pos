<%- include("layout", {
  title: "التقارير",
  user,
  body: `
  <div class="row g-3">
    <div class="col-12 col-lg-6">
      <div class="card glass p-3">
        <h5 class="fw-bold">تقرير اليوم</h5>
        <div id="todayBox" class="mt-2 text-secondary">جاري التحميل...</div>
        <div id="topItems" class="mt-3"></div>
        <button id="refreshToday" class="btn btn-outline-light mt-3">تحديث</button>
      </div>
    </div>

    <div class="col-12 col-lg-6">
      <div class="card glass p-3">
        <h5 class="fw-bold">تقرير فترة</h5>
        <div class="row g-2">
          <div class="col-6">
            <label class="form-label text-secondary small">من</label>
            <input id="from" class="form-control" type="date">
          </div>
          <div class="col-6">
            <label class="form-label text-secondary small">إلى</label>
            <input id="to" class="form-control" type="date">
          </div>
        </div>
        <button id="rangeBtn" class="btn btn-primary mt-3">عرض</button>
        <div id="rangeBox" class="mt-3 text-secondary"></div>
      </div>
    </div>
  </div>

  <script src="/public/reports.js"></script>
`}) %>
